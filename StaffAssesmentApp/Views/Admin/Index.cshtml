@model IEnumerable<StaffAssessmentApp.Models.DTOs.TestDto>
@{
    ViewData["Title"] = "Admin Page";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model == null || !Model.Any())
{
    <p>No tests available. Please create one</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model)
            {
                <tr>
                    <td>@test.Title</td>
                    <td>@test.Description</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = test.Id }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Details", "Details", new { id = test.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = test.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
